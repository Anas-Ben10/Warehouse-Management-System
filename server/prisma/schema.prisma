generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
  STAFF
}

enum TxnType {
  RECEIVE
  SHIP
  TRANSFER
}


model Division {
  id        String   @id @default(cuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users     User[]
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  name            String
  passwordHash    String
  role            Role      @default(STAFF)
  isActive        Boolean   @default(true)

  divisionId      String?
  division        Division? @relation(fields: [divisionId], references: [id])

  // Invite / password setup flow (used when an admin creates a user)
  inviteTokenHash String?
  inviteExpiresAt DateTime?

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  transactions    Transaction[]
}


model Item {
  id           String   @id @default(cuid())
  sku          String   @unique
  name         String
  barcode      String?  @unique
  reorderLevel Int      @default(0)
  isDeleted    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  stocks       Stock[]
  transactions Transaction[]
}

model Location {
  id        String   @id @default(cuid())
  code      String   @unique
  name      String
  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stocks    Stock[]
  srcTxns   Transaction[] @relation("SrcLocation")
  dstTxns   Transaction[] @relation("DstLocation")
}

model Stock {
  id         String   @id @default(cuid())
  itemId     String
  locationId String
  qty        Int      @default(0)
  updatedAt  DateTime @updatedAt

  item       Item     @relation(fields: [itemId], references: [id])
  location   Location @relation(fields: [locationId], references: [id])

  @@unique([itemId, locationId])
}

model Transaction {
  id            String    @id @default(cuid())
  offlineOpId   String?   @unique
  type          TxnType
  itemId        String
  qty           Int
  srcLocationId String?
  dstLocationId String?
  note          String?

  // Purchase / receiving info (optional)
  isFree        Boolean   @default(false)
  unitPrice     Decimal?  @db.Numeric(12,2)

  createdById   String
  createdAt     DateTime  @default(now())

  item          Item      @relation(fields: [itemId], references: [id])
  createdBy     User      @relation(fields: [createdById], references: [id])
  srcLocation   Location? @relation("SrcLocation", fields: [srcLocationId], references: [id])
  dstLocation   Location? @relation("DstLocation", fields: [dstLocationId], references: [id])
}


model SyncOp {
  id        String   @id
  userId    String
  createdAt DateTime @default(now())
}
